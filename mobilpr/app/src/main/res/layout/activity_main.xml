<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    tools:context="com.example.flashlight.MainActivity">


    <Switch
        android:id="@+id/sw"
        android:layout_width="69dp"
        android:layout_height="66dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="84dp"
        android:layout_marginTop="12dp"
        android:checked="false" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="14dp"
        android:text="SOS ayarla" />

    <SeekBar
        android:id="@+id/seek"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="100dp" />

    <ImageButton
        android:id="@+id/torchbtn"
        android:layout_width="331dp"
        android:layout_height="536dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="29dp"
        android:src="@drawable/torch_off"
        tools:ignore="SpeakableTextPresentCheck">

    </ImageButton>

    <EditText
        android:id="@+id/InputText"
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="182dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="8dp"
        android:layout_weight="0.4"
        android:hint="Morse İfadesi"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/OutputText"
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="177dp"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="12dp"
        android:layout_weight="0.4"
        android:autoSizeMaxTextSize="25sp"
        android:autoSizeMinTextSize="15sp"
        android:autoSizeTextType="uniform"
        android:textAlignment="center"></TextView>

    <Button
        android:id="@+id/MainButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginStart="198dp"
        android:layout_marginTop="87dp"
        android:layout_marginEnd="12dp"
        android:layout_weight="0.1"
        android:onClick="onMainButtonClcik"
        android:text="Dönüştür"
        android:textAllCaps="false"
        android:textSize="25sp"></Button>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:text="SOS"
        android:textSize="50dp" />


</RelativeLayout>


